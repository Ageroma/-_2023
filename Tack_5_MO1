#include <iostream>

using namespace std;

int main() {
    const int size = 10; // изменяя это значение можно создать таблицу Пифагора любого размера
    for (int i = 1; i <= size; i++) {
        for (int j = 1; j <= size; j++) { // используем  цикл `for`, чтобы перебрать все комбинации чисел от 1 до 10
            cout << i * j << "\t"; // вычисляем их произведение и  используем символ табуляции `"\t"`, чтобы  вывод был в виде таблицы
        }
        cout << endl; // с помошью этого переходим на новую строку
    }
    return 0;
}
